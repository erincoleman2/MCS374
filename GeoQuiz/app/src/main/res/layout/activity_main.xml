        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next_text"
        android:visibility="visible"
        app:icon="@drawable/arrow_right" />
    <!--</LinearLayout>-->


</LinearLayout>